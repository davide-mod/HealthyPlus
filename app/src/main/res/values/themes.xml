<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthyPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_mealplanner</item>
        <item name="colorSecondaryVariant">@color/main_fitnesstracker</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/ubuntu_regular</item>
    </style>
    <style name="titleText">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="buttonText">
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="label">
        <item name="android:textSize">@dimen/label</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="buttonTextFinish">
        <item name="android:textSize">@dimen/buttonText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="notificationTitle">
        <item name="android:textSize">@dimen/notTitleText</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="notificationDescription">
        <item name="android:textSize">@dimen/notDescText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="notificationTime">
        <item name="android:textSize">@dimen/noTimeText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">end</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="mealName">
        <item name="android:textSize">@dimen/mealName</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="mealDate">
        <item name="android:textSize">@dimen/mealDate</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>