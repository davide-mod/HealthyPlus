<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.modolo.healthyplus.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login"
        />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.modolo.healthyplus.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_nav_main"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.modolo.healthyplus.signup.SignupFragment"
        tools:layout="@layout/fragment_signup"
        android:label="SignupFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.modolo.healthyplus.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/mealplannerFragment"
        tools:layout="@layout/fragment_mealplanner"
        android:name="com.modolo.healthyplus.mealplanner.MealplannerFragment"
        android:label="MealplannerFragment" />
    <fragment
        android:id="@+id/editMealFragment"
        tools:layout="@layout/mealplanner_frag_edit"
        android:name="com.modolo.healthyplus.mealplanner.EditMealFragment"
        android:label="EditMealFragment" >
        <argument
            android:name="meal"
            app:argType="com.modolo.healthyplus.mealplanner.Meal"/>
    </fragment>
</navigation>