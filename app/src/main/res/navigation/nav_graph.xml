<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.modolo.healthyplus.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.modolo.healthyplus.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_nav_main"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.modolo.healthyplus.signup.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_signup" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.modolo.healthyplus.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/mealplannerFragment"
        android:name="com.modolo.healthyplus.mealplanner.MealPlannerFragment"
        android:label="MealplannerFragment"
        tools:layout="@layout/fragment_mealplanner" />
    <fragment
        android:id="@+id/editMealFragment"
        android:name="com.modolo.healthyplus.mealplanner.EditMealFragment"
        android:label="EditMealFragment"
        tools:layout="@layout/mealplanner_frag_edit">
        <argument
            android:name="meal"
            app:argType="com.modolo.healthyplus.mealplanner.Meal" />
    </fragment>
    <fragment
        android:id="@+id/addMealFragment"
        tools:layout="@layout/mealplanner_frag_add"
        android:name="com.modolo.healthyplus.mealplanner.AddMealFragment"
        android:label="AddMealFragment" >
        <argument
            android:name="meal"
            app:argType="com.modolo.healthyplus.mealplanner.Meal"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>